  <%- include('./common/header') %>
  <div class="container hero-list">
    <!-- <input type="hidden" name="id" id="heroId"> -->
    <form id="form">
      <div class="form-group">
        <label>英雄名称</label>
        <input type="text" name="name" class="form-control" placeholder="请输入英雄名称">
      </div>
      <div class="form-group">
        <label>英雄性别</label>
        <div class="radio">
          <label>
            <input type="radio" name="gender" value="男" checked>男
          </label>
          <label>
            <input type="radio" name="gender" value="女">女
          </label>
        </div>
      </div>
      <div class="form-group">
        <label>年龄</label>
        <input type="text" name="age" class="form-control" placeholder="请输入英雄年龄">
      </div>
      <div class="form-group">
        <label>地址</label>
        <input type="text" name="address" class="form-control" placeholder="请输入英雄地址">
      </div>
      <button type="submit" class="btn btn-success">点击保存</button>
    </form>
  </div>
  <%- include('./common/footer') %>
  <script>
    $(function() {
      $(".btn-success").on("click", function(e) {
        e.preventDefault()
        $.post({
          url: '/addOneHeroInfo',
          data: $("form").serialize(),
          success: function(res) {
            if (res.code == 200) {
              location.href = '/'
            }
          }
          
        })
      })
    })
  </script>
